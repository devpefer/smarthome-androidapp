<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPower"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:text="Estado:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnEncender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="@+id/tvPower"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="50dp"
        android:text="Encender" />

    <Button
        android:id="@+id/btnApagar"
        android:text="Apagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="@+id/tvPower"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/tvTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/tvPower"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_toStartOf="@+id/btnTemperatura"
        android:layout_toLeftOf="@+id/btnTemperatura"
        android:text="Temp. actual:"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEncender"
        android:layout_marginStart="-134dp"
        android:layout_marginLeft="-134dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/tvTemperatura"
        android:layout_toRightOf="@+id/tvTemperatura"
        android:hint="Temperatura" />

    <Button
        android:id="@+id/btnTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnApagar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="37dp"
        android:layout_marginRight="-1dp"
        android:text="Establecer" />

    <Button
        android:id="@+id/btnReconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Reconectar" />

</RelativeLayout>