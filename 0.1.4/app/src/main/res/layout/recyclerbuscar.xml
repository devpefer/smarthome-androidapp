<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/esquinas_redondeadas"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        >
        <TextView
            android:text="Habitacion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:id="@+id/tvNombreDispositivo" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lytNombreDispositivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/esquinas_redondeadas"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etNombreDelDispositivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre del dispositivo"
            />

       <Button
           android:id="@+id/btnAnyadirDispositivo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="AÃ±adir"/>

    </RelativeLayout>


</RelativeLayout>