<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AnyadirLocActivity">

    <EditText
        android:id="@+id/etAnyadirLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Nombre casa o lugar de trabajo"
        android:textColorHint="@color/colorBlanco"
        android:textColor="@color/colorBlanco"/>
    <EditText
        android:id="@+id/etBrokerIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:hint="IP del Broker"
        android:textColorHint="@color/colorBlanco"
        android:textColor="@color/colorBlanco"/>
    <EditText
        android:id="@+id/etClientId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:hint="Client Id"
        android:textColorHint="@color/colorBlanco"
        android:textColor="@color/colorBlanco"/>

    <Button
        android:id="@+id/btnAnyadirLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:text="AÃ±adir" />

</RelativeLayout>